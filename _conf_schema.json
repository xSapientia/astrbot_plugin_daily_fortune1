{
  "enabled": {
    "description": "插件总开关",
    "type": "bool",
    "default": true,
    "hint": "控制插件是否启用"
  },
  "min_fortune": {
    "description": "人品值下限",
    "type": "int",
    "default": 0,
    "hint": "每日人品值的最小值"
  },
  "max_fortune": {
    "description": "人品值上限",
    "type": "int",
    "default": 100,
    "hint": "每日人品值的最大值"
  },
  "provider_id": {
    "description": "LLM供应商ID",
    "type": "string",
    "default": "",
    "hint": "指定使用的大语言模型供应商ID，留空则使用默认供应商"
  },
  "api_key": {
    "description": "OpenAI兼容API密钥",
    "type": "string",
    "default": "",
    "hint": "自定义API的访问密钥"
  },
  "api_url": {
    "description": "OpenAI兼容API地址",
    "type": "string",
    "default": "",
    "hint": "API地址，如 https://api.openai.com/v1 或 https://api.example.com/v1/chat/completions"
  },
  "model_name": {
    "description": "模型名称",
    "type": "string",
    "default": "",
    "hint": "使用的模型名称，如 gpt-3.5-turbo"
  },
  "persona_name": {
    "description": "LLM人格名称",
    "type": "string",
    "default": "",
    "hint": "指定使用的人格情景名称，留空则使用默认人格"
  },
  "detecting_message": {
    "description": "检测中提示文本",
    "type": "string",
    "default": "神秘的能量汇聚，窥见你的命运，正在祈祷中...",
    "hint": "首次检测人品时显示的提示信息"
  },
  "detection_prompt": {
    "description": "人品检测过程提示词",
    "type": "text",
    "default": "测试今日人品的时候，显示user_id的 title&card/nickname，模拟一下水晶球上显现今日人品值的过程、结果，字数不超过50字",
    "hint": "描述人品检测过程的提示词"
  },
  "suggestion_prompt": {
    "description": "建议/吐槽提示词",
    "type": "text",
    "default": "你对使用人今日人品值下的建议，字数不超过50字",
    "hint": "针对人品值给出建议的提示词"
  },
  "rank_display_limit": {
    "description": "排行榜显示数量",
    "type": "int",
    "default": 10,
    "hint": "排行榜最多显示的人数，-1表示无限制"
  }
}
