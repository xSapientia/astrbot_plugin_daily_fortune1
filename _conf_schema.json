{
  "jrrp_algorithm": {
    "description": "人品值随机算法",
    "type": "string",
    "default": "random",
    "options": ["random", "pseudo_random"],
    "hint": "random: 完全随机; pseudo_random: 基于用户ID和日期的伪随机"
  },
  "result_cache_days": {
    "description": "结果缓存天数",
    "type": "int",
    "default": 7,
    "hint": "缓存多少天的查询结果"
  },
  "show_cached_result": {
    "description": "查询时显示缓存的完整结果",
    "type": "bool",
    "default": true
  },
  "history_days": {
    "description": "历史记录显示天数",
    "type": "int",
    "default": 30
  },
  "detecting_text": {
    "description": "检测中提示文本",
    "type": "text",
    "default": "神秘的能量汇聚，{nickname}，你的命运即将显现，正在祈祷中...",
    "hint": "支持变量: {nickname}"
  },
  "process_prompt_template": {
    "description": "过程模拟AI提示词",
    "type": "text",
    "default": "使用{nickname}称呼，模拟你使用水晶球缓慢复现今日结果的过程，50字以内",
    "hint": "支持变量: {nickname}, {card}, {title}, {jrrp}, {fortune}"
  },
  "advice_prompt_template": {
    "description": "评语AI提示词",
    "type": "text",
    "default": "使用{nickname}称呼，对{nickname}的今日人品值{jrrp}给出你的评语和建议，50字以内",
    "hint": "支持变量: {nickname}, {card}, {title}, {jrrp}, {fortune}"
  },
  "result_template": {
    "description": "随机结果模板",
    "type": "text",
    "default": "🔮 {process}\n💎 人品值：{jrrp}\n✨ 运势：{fortune}\n💬 建议：{advice}",
    "hint": "支持所有变量"
  },
  "query_template": {
    "description": "查询结果模板",
    "type": "text",
    "default": "📌 今日人品\n{nickname}，今天已经查询过了哦~\n今日人品值: {jrrp}\n运势: {fortune} {femoji}",
    "hint": "支持变量: {nickname}, {jrrp}, {fortune}, {femoji}"
  },
  "rank_template": {
    "description": "排行榜模板",
    "type": "text",
    "default": "📊【今日人品排行榜】{date}\n━━━━━━━━━━━━━━━\n{ranks}",
    "hint": "支持变量: {date}, {ranks}"
  },
  "rank_item_template": {
    "description": "排行榜条目模板",
    "type": "text",
    "default": "{medal} {nickname}: {jrrp} ({fortune})",
    "hint": "支持变量: {medal}, {nickname}, {jrrp}, {fortune}"
  },
  "history_template": {
    "description": "历史记录模板",
    "type": "text",
    "default": "📚 {nickname} 的人品历史记录\n{history}\n\n📊 统计信息:\n平均人品值: {avgjrrp}\n最高人品值: {maxjrrp}\n最低人品值: {minjrrp}",
    "hint": "支持所有历史记录相关变量"
  },
  "llm_provider_id": {
    "description": "LLM提供商ID",
    "type": "string",
    "hint": "留空使用AstrBot默认配置"
  },
  "persona_name": {
    "description": "人格名称",
    "type": "string",
    "hint": "留空使用AstrBot默认人格"
  }
}
